<% include partials/header %>

<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to TechGrazer!</h1>
            <p>We hope you learn a lot from our amazing tech tutorials (assuming there are any!)</p>
            <p>
                <a class='btn btn-primary btn-lg' href='/tutorials/new'>Create new tutorial</a>
            </p>
        </div>
    </header>
    
    <div class='row text-center' style='display:flex; flex-wrap: wrap'>
        <% tutorials.forEach(function(tutorial){ %>
            <div class='col-md-3 col-sm-6'>
                <div class="thumbnail">
                    <img src='<%= tutorial.image %>'>
                    <div class='caption'>
                        <h3><%= tutorial.title %></h3>
                        <p><%= tutorial.description %></p>
                        <p><a class="btn btn-success btn-sm" href="/tutorials/<%= tutorial._id %>">View tutorial</a></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
        
</div>
    
<% include partials/footer %>